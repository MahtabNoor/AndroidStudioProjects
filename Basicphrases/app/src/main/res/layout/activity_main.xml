<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mahtab.basicphrases.MainActivity">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:columnCount="2"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="voice"
            android:tag="doyouspeakenglish"
            android:text="Do You \n Speak English?"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/button2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="voice"
            android:tag="goodevening"
            android:text="Good Evening"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/button3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="voice"
            android:tag="hello"
            android:text="Hello"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/button4"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="voice"
            android:tag="howareyou"
            android:text="How are You?"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/button5"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="voice"
            android:tag="ilivein"
            android:text="I live in ..."
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/button6"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="voice"
            android:tag="mynameis"
            android:text="My Name Is"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/button7"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="voice"
            android:tag="please"
            android:text="Please"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/button8"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="voice"
            android:tag="welcome"
            android:text="Welcome"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="231dp" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
